@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - CMCS</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        :root {
            --primary-color: #007ACC;
            --secondary-color: #6c757d;
            --success-color: #28a745;
            --light-bg: #f8f9fa;
        }

        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .login-container {
            background: white;
            border-radius: 20px;
            box-shadow: 0 15px 35px rgba(0,0,0,0.1);
            overflow: hidden;
            max-width: 400px;
            width: 100%;
        }

        .login-header {
            background: var(--primary-color);
            color: white;
            padding: 2rem;
            text-align: center;
        }

        .login-body {
            padding: 2rem;
        }

        .form-control {
            border-radius: 10px;
            padding: 12px 15px;
            border: 2px solid #e9ecef;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                border-color: var(--primary-color);
                box-shadow: 0 0 0 0.2rem rgba(0, 122, 204, 0.25);
            }

        .btn-login {
            background: var(--primary-color);
            border: none;
            border-radius: 10px;
            padding: 12px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .btn-login:hover {
                background: #005a9e;
                transform: translateY(-2px);
            }

        .role-selector {
            cursor: pointer;
            border: 2px solid #e9ecef;
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 10px;
            transition: all 0.3s ease;
        }

            .role-selector:hover {
                border-color: var(--primary-color);
                background-color: #f8f9fa;
            }

            .role-selector.active {
                border-color: var(--primary-color);
                background-color: rgba(0, 122, 204, 0.1);
            }

        .login-features {
            background: var(--light-bg);
            border-radius: 15px;
            padding: 1.5rem;
            margin-top: 1.5rem;
        }

        .feature-item {
            display: flex;
            align-items: center;
            margin-bottom: 0.5rem;
            font-size: 0.9rem;
        }

            .feature-item i {
                color: var(--primary-color);
                margin-right: 0.5rem;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="login-container">
                    <!-- Header -->
                    <div class="login-header">
                        <i class="bi bi-mortarboard-fill display-4 mb-3"></i>
                        <h3 class="mb-0">CMCS</h3>
                        <p class="mb-0 opacity-75">Contract Monthly Claim System</p>
                    </div>

                    <!-- Login Form -->
                    <div class="login-body">
                        <h5 class="text-center mb-4 fw-bold text-dark">Sign In to Your Account</h5>

                        <form asp-action="Index" method="post">
                            <!-- Role Selection -->
                            <div class="mb-3">
                                <label class="form-label fw-semibold">Select Role</label>
                                <div class="role-selector active" onclick="selectRole('lecturer')">
                                    <input type="radio" class="btn-check" name="role" id="lecturer" value="lecturer" checked>
                                    <label class="btn btn-outline-primary w-100" for="lecturer">
                                        <i class="bi bi-person-video3 me-2"></i>Lecturer
                                    </label>
                                </div>
                                <div class="role-selector" onclick="selectRole('management')">
                                    <input type="radio" class="btn-check" name="role" id="management" value="management">
                                    <label class="btn btn-outline-primary w-100" for="management">
                                        <i class="bi bi-building-gear me-2"></i>Management
                                    </label>
                                </div>
                            </div>

                            <!-- Username -->
                            <div class="mb-3">
                                <label for="username" class="form-label fw-semibold">Username</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-person"></i>
                                    </span>
                                    <input type="text" id="username" name="username" class="form-control"
                                           placeholder="Enter your username" required>
                                </div>
                            </div>

                            <!-- Password -->
                            <div class="mb-4">
                                <label for="password" class="form-label fw-semibold">Password</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-lock"></i>
                                    </span>
                                    <input type="password" id="password" name="password" class="form-control"
                                           placeholder="Enter your password" required>
                                </div>
                            </div>

                            <!-- Error Message -->
                            @if (ViewBag.ErrorMessage != null)
                            {
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                    @ViewBag.ErrorMessage
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            }

                            <!-- Submit Button -->
                            <div class="d-grid mb-4">
                                <button type="submit" class="btn btn-login btn-lg text-white">
                                    <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
                                </button>
                            </div>
                        </form>

                        <!-- Features -->
                        <div class="login-features">
                            <h6 class="fw-semibold mb-3">
                                <i class="bi bi-lightning-charge text-primary me-2"></i>
                                System Features
                            </h6>
                            <div class="feature-item">
                                <i class="bi bi-check-circle-fill"></i>
                                <span>Quick claim submission</span>
                            </div>
                            <div class="feature-item">
                                <i class="bi bi-check-circle-fill"></i>
                                <span>Real-time status tracking</span>
                            </div>
                            <div class="feature-item">
                                <i class="bi bi-check-circle-fill"></i>
                                <span>Secure document upload</span>
                            </div>
                            <div class="feature-item">
                                <i class="bi bi-check-circle-fill"></i>
                                <span>Multi-level approval workflow</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function selectRole(role) {
            // Update role selection UI
            document.querySelectorAll('.role-selector').forEach(el => {
                el.classList.remove('active');
            });
            event.currentTarget.classList.add('active');

            // Update radio button
            document.getElementById(role).checked = true;

            // Auto-fill credentials for demo
            if (role === 'lecturer') {
                document.getElementById('username').value = 'lecturer';
                document.getElementById('password').value = 'password';
            } else if (role === 'management') {
                document.getElementById('username').value = 'management';
                document.getElementById('password').value = 'password';
            }
        }

        // Auto-fill lecturer credentials on load
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('username').value = 'lecturer';
            document.getElementById('password').value = 'password';
        });
    </script>
</body>
</html>