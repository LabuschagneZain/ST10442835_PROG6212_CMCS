@model List<ST10442835_PROG6212_CMCS.Models.Claim>

@{
    ViewData["Title"] = "Management Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manager Dashboard - CMCS</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f4f6f9;
        }

        .navbar {
            background-color: #007ACC;
        }

        .navbar-brand, .nav-link {
            color: white !important;
        }

        .card {
            border-radius: 12px;
            box-shadow: 0px 4px 10px rgba(0,0,0,0.1);
        }

        table th, table td {
            vertical-align: middle;
        }

        .status-badge {
            font-size: 0.9rem;
            padding: 6px 12px;
            border-radius: 8px;
        }

        .status-pending {
            background-color: #ffc107;
            color: black;
        }

        .status-approved {
            background-color: #28a745;
            color: white;
        }

        .status-rejected {
            background-color: #dc3545;
            color: white;
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="#">CMCS - Management</a>
            <div class="d-flex">
                <a asp-controller="Login" asp-action="Index" class="btn btn-light btn-sm">Logout</a>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <h3>Welcome, Manager</h3>

        <div class="card p-4 mt-3">
            <h5 class="mb-3 fw-semibold">Claims Overview</h5>

            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Lecturer</th>
                        <th>Month</th>
                        <th>Hours</th>
                        <th>Rate</th>
                        <th>Total</th>
                        <th>Document</th>
                        <th>Status</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var claim in Model)
                        {
                            <tr>
                                <td>@claim.LecturerName</td>
                                <td>@claim.Month</td>
                                <td>@claim.HoursWorked</td>
                                <td>@claim.HourlyRate.ToString("C")</td>
                                <td>@claim.TotalAmount.ToString("C")</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(claim.DocumentUrl))
                                    {
                                        <a asp-action="ViewDocument" asp-route-id="@claim.Id" class="text-decoration-none text-primary">View</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No file</span>
                                    }
                                </td>
                                <td>
                                    @if (claim.Status == "Approved")
                                    {
                                        <span class="status-badge status-approved">Approved</span>
                                    }
                                    else if (claim.Status == "Rejected")
                                    {
                                        <span class="status-badge status-rejected">Rejected</span>
                                    }
                                    else
                                    {
                                        <span class="status-badge status-pending">Pending</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (claim.Status == "Pending")
                                    {
                                        <form asp-action="Approve" asp-controller="Claims" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@claim.Id" />
                                            <button type="submit" class="btn btn-success btn-sm">Approve</button>
                                        </form>
                                        <form asp-action="Reject" asp-controller="Claims" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@claim.Id" />
                                            <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                                        </form>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No actions</span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted">No claims submitted yet.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
