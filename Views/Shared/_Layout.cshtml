@*
    _Layout.cshtml — Clean, centered, modern Bootstrap layout
    Uses Bootstrap 5, simplifies navigation, centers text
*@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMCS</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ST10442835_PROG6212_CMCS.styles.css" asp-append-version="true" />

    <style>
        body {
            background-color: #f8f9fa;
        }

        /* Main nav styling */
        .navbar {
            box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.5rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .nav-link {
            font-weight: 500;
            margin: 0 10px;
            transition: 0.3s;
        }

            .nav-link:hover {
                color: #ffc107 !important;
            }

        main {
            margin-top: 30px;
        }

        footer {
            background-color: #0d6efd;
            color: white;
            padding: 15px 0;
            margin-top: 50px;
        }

            footer a {
                color: #ffc107;
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                }

        .navbar-nav {
            margin: 0 auto; /* Centers menu */
        }
    </style>
</head>

<body>
    <!-- TOP NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand mx-auto" asp-controller="Home" asp-action="Index">CMCS</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-center" id="mainNavbar">
                <ul class="navbar-nav text-center">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">🏠 Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Dashboard" asp-action="LecturerIndex">📊 Lecturer Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Dashboard" asp-action="ManagementIndex">🗂 Management Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Login" asp-action="Index">🔐 Login</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- MAIN CONTENT -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- FOOTER -->
    <footer class="text-center">
        <div class="container">
            <p class="mb-0">&copy; 2025 - CMCS System | Built by ST10442835</p>
            <small><a asp-controller="Home" asp-action="Privacy">Privacy Policy</a></small>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
