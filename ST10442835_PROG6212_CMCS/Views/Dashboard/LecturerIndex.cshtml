@{
    ViewData["Title"] = "Lecturer Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lecturer Dashboard - CMCS</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f4f6f9;
        }

        .navbar {
            background-color: #007ACC;
        }

        .navbar-brand, .nav-link {
            color: white !important;
        }

        .card {
            border-radius: 12px;
            box-shadow: 0px 4px 10px rgba(0,0,0,0.1);
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">CMCS - Lecturer</a>
            <div class="d-flex">
                <a href="login.html" class="btn btn-light btn-sm">Logout</a>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <h3>Welcome, Lecturer</h3>
        <div class="row mt-4">
            <!-- Submit New Claim -->
            <div class="col-md-6">
                <div class="card p-3">
                    <h5>Submit New Claim</h5>
                    <form>
                        <div class="mb-3">
                            <label class="form-label">Month</label>
                            <select class="form-select">
                                <option>January</option>
                                <option>February</option>
                                <option>March</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Hours Worked</label>
                            <input type="number" class="form-control" placeholder="Enter hours">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Hourly Rate</label>
                            <input type="number" class="form-control" placeholder="Enter rate">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Upload Supporting Document</label>
                            <input type="file" class="form-control">
                        </div>
                        <button class="btn btn-primary">Submit Claim</button>
                    </form>
                </div>
            </div>

            <!-- View Claims -->
            <div class="col-md-6">
                <div class="card p-3">
                    <h5>My Submitted Claims</h5>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Month</th>
                                <th>Hours</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>January</td>
                                <td>20</td>
                                <td><span class="badge bg-warning">Pending</span></td>
                            </tr>
                            <tr>
                                <td>December</td>
                                <td>15</td>
                                <td><span class="badge bg-success">Approved</span></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
