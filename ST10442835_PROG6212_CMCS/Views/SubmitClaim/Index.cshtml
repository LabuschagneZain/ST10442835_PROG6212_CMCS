@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Submit Claim - CMCS</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: #f8f9fa;
        }

        .card {
            border-radius: 12px;
            max-width: 600px;
            margin: auto;
        }
    </style>
</head>
<body>
    <div class="container py-5">
        <div class="card shadow-sm p-4">
            <h3 class="mb-4 text-center text-primary">Submit Monthly Claim</h3>

            <form>
                <div class="mb-3">
                    <label class="form-label">Month</label>
                    <input type="month" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Total Hours Worked</label>
                    <input type="number" class="form-control" min="1" placeholder="e.g., 12" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Upload Supporting Document</label>
                    <input type="file" class="form-control">
                </div>
                <button type="submit" class="btn btn-primary w-100">Submit Claim</button>
            </form>
        </div>
    </div>
</body>
</html>
